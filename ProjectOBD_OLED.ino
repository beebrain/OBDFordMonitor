  int slen = fdata.length();
  if (slen<=len){
 //
    for ( addpad = 1; addpad <=dec + dig -  slen; addpad++) {
      fdata = "0" + fdata;
    }
  }else{
    fdata = fdata.substring(0,len);
    if(fdata.substring(len-1,len) == "."){
      fdata =  " "+fdata.substring(0,len-1);
    }
  }
  
  return fdata;
 
}


